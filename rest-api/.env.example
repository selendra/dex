# Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1
API_BASE_URL=/api/v1

# Network Configuration
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=1
NETWORK_NAME=mainnet

# Contract Addresses (Update with mainnet addresses)
POOL_MANAGER_ADDRESS=
POSITION_MANAGER_ADDRESS=
SWAP_ROUTER_ADDRESS=
STATE_VIEW_ADDRESS=
LIQUIDITY_MANAGER_ADDRESS=

# Wallet Configuration
PRIVATE_KEY=
# For production, use KMS or hardware wallet integration
# NEVER commit private keys to version control

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=24h
API_KEY_HEADER=X-API-Key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Cache (Optional)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# Database (Optional - for tracking, analytics)
DATABASE_URL=postgresql://user:password@localhost:5432/dex_api

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=logs/api.log
SENTRY_DSN=
DATADOG_API_KEY=

# CORS
CORS_ORIGIN=https://yourdapp.com
CORS_CREDENTIALS=true

# Gas Settings
GAS_PRICE_BUFFER=1.1
MAX_GAS_PRICE_GWEI=500
GAS_ESTIMATION_BUFFER=1.2

# Feature Flags
ENABLE_ADMIN_ENDPOINTS=false
ENABLE_SWAP_EXECUTION=true
ENABLE_LIQUIDITY_MANAGEMENT=true
ENABLE_METRICS=true

# External Services
COINGECKO_API_KEY=
ETHERSCAN_API_KEY=

# Rate Limiting Per Endpoint
SWAP_RATE_LIMIT=10
LIQUIDITY_RATE_LIMIT=5
QUOTE_RATE_LIMIT=100

# Webhook Configuration (Optional)
WEBHOOK_URL=
WEBHOOK_SECRET=
