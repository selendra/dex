{
  "name": "dex-production-api",
  "version": "1.0.0",
  "description": "Production REST API for Uniswap V4 DEX",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node scripts/test-all.js",
    "test:all": "node scripts/test-all.js",
    "test:health": "node scripts/test-health.js",
    "test:swap": "node scripts/test-swap.js",
    "test:pool": "node scripts/test-pool.js",
    "test:token": "node scripts/test-token.js",
    "test:price": "node scripts/test-price.js",
    "test:liquidity": "node scripts/test-liquidity.js",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t dex-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env dex-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop dex-api",
    "pm2:restart": "pm2 restart dex-api",
    "pm2:logs": "pm2 logs dex-api"
  },
  "keywords": ["dex", "uniswap", "defi", "api", "production"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
